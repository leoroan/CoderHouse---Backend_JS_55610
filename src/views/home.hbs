<!-- Section-->
<section class="py-3 mb-2 h-100">
  <div class="container px-2 px-lg-5 mt-1">
    <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 justify-content-center">

      {{!-- a carousel --}}
      <div id="mainCarousel" class="carousel slide" data-bs-ride="carousel">
        <p class="text-center fs-5 fw-bolder lead text-black-50 mb-3 fst-italic"> Some of our products </p>
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="0" class="active" aria-current="true"
            aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
          <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="3" aria-label="Slide 4"></button>
          <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="4" aria-label="Slide 5"></button>
        </div>

        <div class="carousel-inner mb-5">

          {{#each products}}
          {{#if @first}}
          <div class="carousel-item active">
            <img src={{this.thumbnail}} class="d-block w-100" alt={{this.title}}>
            <div class="carousel-caption d-none d-md-block">
              <h5>{{ this.title }}</h5>
              <p>{{ this.description }}</p>
            </div>
          </div>
          {{/if}}
          {{/each}}

          {{#each products}}
          {{#unless @first}}
          <div class="carousel-item">
            <img src={{this.thumbnail}} class="d-block w-100" alt={{this.title}}>
            <div class="carousel-caption d-none d-md-block">
              <h5>{{ this.title }}</h5>
              <p>{{ this.description }}</p>
            </div>
          </div>
          {{/unless}}
          {{/each}}

        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel"
          data-bs-slide="prev"></button>
        <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel"
          data-bs-slide="next"></button>
      </div>

      {{!-- a table --}}
      <div class="container">
        <p class="text-center fs-5 fw-bolder lead text-black-50 mb-3 fst-italic"> lista de productos "capeada" para la muestra...(5) </p>
        <div class="table-responsive h-75">
          <table class="table table-bordered table-hover 75-100">
            <thead>
              <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Price</th>
              </tr>
            </thead>
            <tbody>
              {{#each products}}
              <tr>
                <td>{{this.id}}</td>
                <td>{{this.title}}</td>
                <td>{{this.price}}</td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>


    </div>
  </div>
  </div>
  <div class="d-flex justify-content-center">
    <button class="btn btn-outline-dark my-4">
      <a class="dropdown-item " href="/api/products">Lets Go Shopping</a>
    </button>
  </div>

</section>
<script src="/socket.io/socket.io.js"></script>
<script src="/script/{{fileJs}}"></script>